\name{BVD}
\alias{BVD}
%- Also NEED an '\alias' for EACH other topic documented here.
\title{Bootstrap vector correlation distribution (BVD) method
%%  ~~function to do ... ~~
}
\description{
%%  ~~ A concise (1-5 lines) description of what the function does. ~~
Identifies the number of common eigenvectors in several groups using the bootstrap vector correlation distributions (BVD) method.
}
\usage{
BVD(origdata, reps = 1000)
}
%- maybe also 'usage' for other objects documented here.
\arguments{
  \item{origdata}{
%%     ~~Describe \code{origdata} here~~
List of the sample data sets.
}
  \item{reps}{
%%     ~~Describe \code{reps} here~~
Number of bootstrap replications to use.
}
}
\details{
%%  ~~ If necessary, more details than the description above ~~
Identifies the number of common eigenvectors using the BVD 1a, BVD 1b, BVD 1c, BVD 2a, BVD 2b, BVD 2c and BVD 2d methods.
}
\value{
%%  ~Describe the value returned
%%  If it is a LIST, use
%%  \item{comp1 }{Description of 'comp1'}
%%  \item{comp2 }{Description of 'comp2'}
%% ...
Returns a matrix with the following rows:
\item{Common eigenvector}{Number of the eigenvector in the modal matrix.}
\item{BVD 1a}{Vector indicating the common eigenvectors (=1) according to this method.}
\item{BVD 1b}{Vector indicating the common eigenvectors (=1) according to this method.}
\item{BVD 1c}{Vector indicating the common eigenvectors (=1) according to this method.}
\item{BVD 2a}{Vector indicating the common eigenvectors (=1) according to this method.}
\item{BVD 2b}{Vector indicating the common eigenvectors (=1) according to this method.}
\item{BVD 2c}{Vector indicating the common eigenvectors (=1) according to this method.}
\item{BVD 2d}{Vector indicating the common eigenvectors (=1) according to this method.}
}
\references{
%% ~put references to the literature/web site here ~
}
\author{
%%  ~~who you are~~
Theo Pepler
}
\note{
%%  ~~further notes~~
Note that this implementation of the BVD method can handle only two groups of data currently.
}

%% ~Make other sections like Warning with \section{Warning }{....} ~

\seealso{
%% ~~objects to See Also as \code{\link{help}}, ~~~
}
\examples{
##---- Should be DIRECTLY executable !! ----
##-- ==>  Define data, use random,
##--	or do  help(data=index)  for the standard data sets.

## The function is currently defined as
function (origdata, reps = 1000) 
{
    k <- 2
    p <- ncol(origdata[[1]])
    nvec <- rep(NA, times = k)
    covmats <- array(NA, dim = c(p, p, k))
    for (i in 1:k) {
        nvec[i] <- nrow(origdata[[i]])
        covmats[, , i] <- cov(origdata[[i]])
    }
    B <- FG(covmats, nvec)$B
    findcpc.out <- findcpc(covmats, B = B, plotting = FALSE)
    commonvecnums <- findcpc.out$all.correlations[1:p, ]
    for (i in 2:(k + 1)) {
        j <- 2
        while (j <= p) {
            if (length(unique(commonvecnums[1:j, i])) == length(unique(commonvecnums[1:(j - 
                1), i]))) {
                commonvecnums <- commonvecnums[-j, ]
                p <- p - 1
            }
            j <- j + 1
        }
    }
    commonvec.order <- commonvecnums[, "B"]
    bootreps <- bootveccor(origdata = origdata, veccormat = commonvecnums[, 
        1:k], nvec = nvec, reps = reps)
    commonvecs <- matrix(0, nrow = 7, ncol = p)
    for (j in 1:p) {
        llim <- quantile(bootreps[, j], probs = 0.025)
        temp.med <- median(bootreps[, j])
        temp.dist <- temp.med - llim
        temp.upper <- temp.med + temp.dist
        if ((temp.med > 0.71) & (temp.upper >= 1)) {
            commonvecs[1, j] <- 1
        }
        if ((temp.med > 0.75) & (temp.upper >= 1)) {
            commonvecs[2, j] <- 1
        }
        if ((temp.med > 0.8) & (temp.upper >= 1)) {
            commonvecs[3, j] <- 1
        }
        lnmax <- log(170)
        sampsize <- mean(nvec)
        mediancutoff <- min(log(max(sampsize - 30, 1))/lnmax * 
            0.2 + 0.6, 0.8)
        if ((temp.med > mediancutoff) & (temp.upper >= 1)) {
            commonvecs[4, j] <- 1
        }
        mediancutoff <- min(log(max(sampsize - 30, 1))/lnmax * 
            0.15 + 0.65, 0.8)
        if ((temp.med > mediancutoff) & (temp.upper >= 1)) {
            commonvecs[5, j] <- 1
        }
        mediancutoff <- min(log(max(sampsize - 30, 1))/lnmax * 
            0.1 + 0.7, 0.8)
        if ((temp.med > mediancutoff) & (temp.upper >= 1)) {
            commonvecs[6, j] <- 1
        }
        mediancutoff <- min(log(max(sampsize - 30, 1))/lnmax * 
            0.05 + 0.75, 0.8)
        if ((temp.med > mediancutoff) & (temp.upper >= 1)) {
            commonvecs[7, j] <- 1
        }
    }
    rownames(commonvecs) <- c("BVD 1a", "BVD 1b", "BVD 1c", "BVD 2a", 
        "BVD 2b", "BVD 2c", "BVD 2d")
    commonvecs <- rbind(`Common eigenvector` = commonvec.order, 
        commonvecs)
    return(commonvecs)
  }
}
% Add one or more standard keywords, see file 'KEYWORDS' in the
% R documentation directory.
\keyword{ ~kwd1 }
\keyword{ ~kwd2 }% __ONLY ONE__ keyword per line
